@model Glamping2.Models.Persona

@{
    ViewData["Title"] = "Details";
    var isAdmin = ViewBag.IsAdmin;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/tipoHabitacion.css">
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
</head>

<div class="container">
    <h1>Detalles</h1>
    <form>
        <div class="row justify-content-center">
            <div class="nav1">
                <label asp-for="TipoDoc" class="form-label">Tipo de Documento</label>
                <input type="text" class="input" value="@Model.TipoDoc" readonly />
            </div>
            <div class="nav1">
                <label asp-for="DocPersona" class="form-label">Número de Documento</label>
                <input type="text" class="input" value="@Model.DocPersona" readonly />
            </div>
            <div class="nav1">
                <label asp-for="NomPersona" class="form-label">Nombre</label>
                <input type="text" class="input" value="@Model.NomPersona" readonly />
            </div>
            <div class="nav1">
                <label asp-for="ApePersona" class="form-label">Apellido</label>
                <input type="text" class="input" value="@Model.ApePersona" readonly />
            </div>
            <div class="nav1">
                <label asp-for="Edad" class="form-label">Edad</label>
                <input type="text" class="input" value="@Model.Edad" readonly />
            </div>
            <div class="nav1">
                <label asp-for="Tel" class="form-label">Teléfono</label>
                <input type="text" class="input" value="@Model.Tel" readonly />
            </div>
            <div class="nav1">
                <label asp-for="FechaNaci" class="form-label">Fecha de Nacimiento</label>
                <input type="text" class="input" value="@Model.FechaNaci.ToShortDateString()" readonly />
            </div>
            <div class="nav1">
                <label asp-for="Direcion" class="form-label">Dirección</label>
                <input type="text" class="input" value="@Model.Direcion" readonly />
            </div>
            <div class="nav1">
                <label asp-for="Nacionalidad" class="form-label">Nacionalidad</label>
                <input type="text" class="input" value="@Model.Nacionalidad" readonly />
            </div>
            <div class="nav1">
                <label asp-for="Ciudad" class="form-label">Ciudad</label>
                <input type="text" class="input" value="@Model.Ciudad" readonly />
            </div>
        </div>
        <div class="div_btn">
            @if (isAdmin)
            {
                <input type="button" value="Editar" class="login-button" onclick="location.href='@Url.Action("Edit", new { id = Model.IdPersona })'" />
            }
            <input type="button" value="Atras" class="login-button" onclick="location.href='@Url.Action("Index")'" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
