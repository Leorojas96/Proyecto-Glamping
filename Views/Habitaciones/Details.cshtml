@model Glamping2.Models.Habitacione

@{
    ViewData["Title"] = "Detalles de Habitación";
    var isAdmin = ViewBag.IsAdmin;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/habitacion.css">
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
</head>

<body>
    <div class="container">
        <h1>Detalles</h1>

        <form class="form">
            <div class="col-md-6">
                <label asp-for="NroHabitacion" class="form-label">Número de Habitación</label>
                <input type="text" class="input" value="@Model.NroHabitacion" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <input type="text" class="input" value="@Model.Descripcion" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="EstadoHabitacion" class="form-label">Estado de Habitación</label>
                <input type="text" class="input" value="@Model.EstadoHabitacion" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="Comodidades" class="form-label">Comodidades</label>
                <input type="text" class="input" value="@Model.Comodidades" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="IdTipoHabitaNavigation" class="form-label">Tipo de Habitación</label>
                <input type="text" class="input" value="@Model.IdTipoHabitaNavigation?.Nombre" readonly />
            </div>

            <div id="div_btn">
                @if (isAdmin)
                {
                    <input id="btn-detalles" type="button" value="Editar" class="login-button"
                        onclick="location.href='@Url.Action("Edit", new { id = Model.IdHabitacion })'" />
                }
                <input id="btn-detalles" type="button" value="Atras" class="login-button"
                    onclick="location.href='@Url.Action("Index", "Habitaciones")'" />
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>
