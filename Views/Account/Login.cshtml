@model GLAMPING.Models.Login

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tipo de Habitación</title>
    <link rel="stylesheet" href="/CSS/login.css">
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
</head>

<body>
    <div class="container">
        <form asp-action="Login" method="post">
            <h1 class="text-center mb-4">Iniciar Sesión</h1>
            @Html.AntiForgeryToken()
            <input placeholder="Correo" id="email" name="Correo" type="email" class="input" required /><br/>
            <input placeholder="Contraseña" id="password" name="Contraseña" type="password" class="input"
                required /><br />
            <input value="Iniciar Sesión" type="submit" class="login-button" />
        </form>
        <form action="@Url.Action("Create", "Personas")" method="get" class="d-inline">
            <button type="submit" class="login-button">Registrarse</button>
        </form>
    </div>
</body>

</html>
