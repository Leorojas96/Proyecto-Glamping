@model Glamping2.Models.Reserva

@{
    ViewData["Title"] = "Detalles de Reserva";
    var isAdmin = ViewBag.IsAdmin;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/tipoHabitacion.css">
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
</head>

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form class="form">
        <div class="row justify-content-center">
            <div class="nav1">
                <label asp-for="FechaReserva" class="form-label">Fecha Reserva</label>
                <input type="text" class="input" value="@Model.FechaReserva.ToString("yyyy-MM-dd")" readonly />
            </div>
            <div class="nav1">
                <label asp-for="FechaInicio" class="form-label">Fecha Inicio</label>
                <input type="text" class="input" value="@Model.FechaInicio.ToString("yyyy-MM-dd")" readonly />
            </div>
            <div class="nav1">
                <label asp-for="FechaFin" class="form-label">Fecha Fin</label>
                <input type="text" class="input" value="@Model.FechaFin.ToString("yyyy-MM-dd")" readonly />
            </div>
            <div class="nav1">
                <label asp-for="NroPersonas" class="form-label">Número de Personas</label>
                <input type="text" class="input" value="@Model.NroPersonas" readonly />
            </div>
            <div class="nav1">
                <label asp-for="Total" class="form-label">Total</label>
                <input type="text" class="input" value="@Model.Total.ToString("0")" readonly />
            </div>
            <div class="nav1">
                <label asp-for="Abono" class="form-label">Abono</label>
                <input type="text" class="input" value="@Model.Abono.ToString("0")" readonly />
            </div>
            <div class="nav1">
                <label asp-for="EstadoReserva" class="form-label">Estado Reserva</label>
                <input type="text" class="input" value="@Model.EstadoReserva" readonly />
            </div>
            <div class="nav1">
                <label asp-for="IdPaquetesNavigation" class="form-label">Paquete</label>
                <input type="text" class="input" value="@Model.IdPaquetesNavigation?.NomPaquete" readonly />
            </div>
            <div class="nav1">
                <label asp-for="IdUsuarioNavigation" class="form-label">Usuario</label>
                <input type="text" class="input" value="@Model.IdUsuarioNavigation?.IdPersonaNavigation?.NomPersona"
                       readonly />
            </div>
        </div>
        <div class="div_btn">
            @if (isAdmin)
            {
                <input type="button" value="Editar" class="login-button"
                       onclick="location.href='@Url.Action("Edit", new { id = Model.IdReservas })'" />
                <input type="button" value="Atrás" class="login-button"
                       onclick="location.href='@Url.Action("Index", "Reservas")'" />
            }
            else
            {
                <input type="button" value="Atrás" class="login-button"
                       onclick="location.href='@Url.Action("Perfil","Account")'" />
            }

        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
