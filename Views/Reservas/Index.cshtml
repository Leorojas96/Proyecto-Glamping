@model IEnumerable<Glamping2.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
    var isAdmin = ViewBag.IsAdmin;
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/habitacion.css">
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
</head>

<body>
    <div id="menusection">
        @if (isAdmin)
        {
            <div class="navBar">
                <a href="@Url.Action("Index", "Usuarios")">Usuarios</a>
                <a href="@Url.Action("Index", "Habitaciones")">Habitaciones</a>
                <a href="@Url.Action("Index", "TipoHabitacions")">Tipo Habitación</a>
                <a href="@Url.Action("Index", "Servicios")">Servicios</a>
                <a href="@Url.Action("Index", "Paquetes")">Paquetes</a>
                <a href="@Url.Action("Index", "Personas")">Clientes</a>
                <a href="@Url.Action("Index", "Reservas")">Reservas</a>
            </div>
        }

        <section id="tabla" class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <form class="d-flex mb-4" method="get" action="@Url.Action("Search", "Reservas")">
                    <input class="form-control me-2" name="searchTerm" type="text" placeholder="Buscar por Nombre o Identificador">
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                </form>

                <div id="crear" class="mb-3">
                    <h1>Reservas</h1>
                    @if (isAdmin)
                    {
                        <a href="@Url.Action("Create", "Reservas")" class="btn btn-primary">Nueva Reserva</a>
                    }
                </div>

                <div class="regis">
                    <table class="table table-striped table-hover">
                <thead>
                    <tr>
                                <th>Fecha de Reserva</th>
                                <th>Total</th>
                                <th>Abono</th>
                                <th>Estado</th>
                                <th>Paquete</th>
                                <th>Usuario</th>
                                <th>Operaciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaReserva.ToString("dd/MM/yyyy")</td>


                                    <td>@item.Total.ToString("0")</td> <!-- Formatea Total -->
                                    <td>@item.Abono.ToString("0")</td>
                                    <td>@Html.DisplayFor(modelItem => item.EstadoReserva)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdPaquetesNavigation.NomPaquete)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdUsuarioNavigation.IdPersonaNavigation.NomPersona)</td>
                            <td>
                                
                                <a href="@Url.Action("Details", new { id = item.IdReservas })" class="btn btn-info btn-sm">Detalles</a> |
                                
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center">No hay reservas disponibles.</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="/js/funcionClick.js"></script>
</body>
    