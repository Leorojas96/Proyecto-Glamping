@model Glamping2.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/tipoHabitacion.css">
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
</head>

<body>
    <div >
        <h1>Usuario</h1>
        
        
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="col-md-6"></div>
            <input type="hidden" asp-for="IdUsuario" />
            <input type="hidden" asp-for="IdPersona" />
            <div class="row justify-content-center">
                <div class="form-group">
                <label asp-for="Correo" class="form-label">Correo</label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Usuario</label>
                    <input type="text" class="form-control" value="@ViewBag.NomPersona" readonly />
                </div>

                <div class="form-group">
                <label asp-for="IdRol" class="form-label">Rol</label>
                <select asp-for="IdRol" class="form-select" asp-items="ViewBag.IdRol"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
                

                <div class="form-group">

                    <input asp-for="Contraseña" type="hidden" class="form-control" />
                </div>
            <nav id="div_btn">
                <input value="Guardar" type="submit" class="login-button" />
                <input value="Cancelar" type="button" class="login-button" onclick="location.href='@Url.Action("Index", "Usuarios")'" />
            </nav>
            </div>
        </form>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="/js/funcionClick.js"></script>
</body>
