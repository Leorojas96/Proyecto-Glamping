@model IEnumerable<Glamping2.Models.Servicio>

@{
    ViewData["Title"] = "Servicios Disponibles";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="/imagenes/icono.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    
</head>
<body>
    <div id="servicios-disponibles">
        <h1 class="text-center mb-4">Servicios Disponibles</h1>
        <div class="row">
            @foreach (var servicio in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@servicio.ImagenUrl" class="card-img-top" alt="Imagen del Servicio">


                        <div class="card-body">
                            <h5 class="card-title">@servicio.NomServicio</h5>
                            <p class="card-text">@servicio.Descripcion</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
