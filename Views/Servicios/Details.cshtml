@model Glamping2.Models.Servicio

@{
    ViewData["Title"] = "Details";
    var isAdmin = ViewBag.IsAdmin;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/tipoHabitacion.css">
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
</head>

<div>
    <h1>Detalles</h1>
    <form>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <label asp-for="NomServicio" class="form-label">Nombre del Servicio</label>
                <input type="text" class="form-control" value="@Model.NomServicio" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <input type="text" class="form-control" value="@Model.Descripcion" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="TipoServicio" class="form-label">Tipo de Servicio</label>
                <input type="text" class="form-control" value="@Model.TipoServicio" readonly />
            </div>
            <div class="col-md-6">
                <label asp-for="Precio" class="form-label">Precio</label>
                <input type="text" class="form-control" value="@Model.Precio.ToString("0.00")" readonly />
            </div>
        </div>
        <div class="mt-3">
            @if (isAdmin)
            {
                <input type="button" value="Editar" class="login-button" onclick="location.href='@Url.Action("Edit", new { id = Model.IdServicios })'" />
            }
            <input value="Cancelar" type="button" class="login-button" onclick="location.href='@ViewBag.CancelUrl'" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
