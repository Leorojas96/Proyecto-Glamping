@model IEnumerable<Glamping2.Models.Servicio>
    @{
        ViewData["Title"] = "Index";
        var isAdmin = ViewBag.IsAdmin;
    }

    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Servicios</title>
        <link rel="stylesheet" href="/CSS/PagPrincipal.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="icon" href="/imagenes/icono.jpg">
    </head>

    <body>
        <div id="menusection">
            @if (isAdmin)
            {
                <div class="navBar">
                    <a href="@Url.Action("Index", "Usuarios")">Usuarios</a>
                    <a href="@Url.Action("Index", "Habitaciones")">Habitaciones</a>
                    <a href="@Url.Action("Index", "TipoHabitacions")">Tipo Habitación</a>
                    <a href="@Url.Action("Index", "Servicios")">Servicios</a>
                    <a href="@Url.Action("Index", "Paquetes")">Paquetes</a>
                    <a href="@Url.Action("Index", "Personas")">Clientes</a>
                    <a href="@Url.Action("Index", "Reservas")">Reservas</a>
                </div>
            }


            <section id="tabla" class="navbar navbar-light bg-light">
                <div class="container-fluid">
                <form asp-controller="Servicios" asp-action="Search" method="get" class="d-flex">
                    <input class="form-control me-2" type="search" name="query" placeholder="Buscar por nombre" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                </form>
                <div id="crear" class="mb-3">
                        <h1>Servicios</h1>
                        @if (isAdmin)
                        {
                            <a href="@Url.Action("Create", "Servicios")" class="btn btn-primary">Nuevo Servicio</a>
                        }
                    </div>
                <div class="regis">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nombre Servicio</th>
                                <th>Descripción</th>
                                <th>Tipo Servicio</th>
                                <th>Precio</th>
                                @if (isAdmin)
                                 {
                                <th>Operaciones</th>
                                 }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NomServicio</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.TipoServicio</td>
                                    <td>@item.Precio</td>
                                @if (isAdmin)
                                {
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.IdServicios })" class="btn btn-warning btn-sm">Editar</a> |
                                    
                                        
                                    
                                    </td>
                                }
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No hay servicios disponibles.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                </div>
            </section>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
        <script src="/js/funcionClick.js"></script>
    </body>
</html>

