@model IEnumerable<Glamping2.Models.Servicio>
@{
    ViewData["Title"] = "Servicios";
    var isAdmin = ViewBag.IsAdmin;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/CSS/PagPrincipal.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="/imagenes/icono.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div id="menusection">
        @if (isAdmin)
        {
            <div class="navBar">
                <a href="@Url.Action("Index", "Usuarios")">Usuarios</a>
                <a href="@Url.Action("Index", "Habitaciones")">Habitaciones</a>
                <a href="@Url.Action("Index", "TipoHabitacions")">Tipo Habitación</a>
                <a href="@Url.Action("Index", "Servicios")">Servicios</a>
                <a href="@Url.Action("Index", "Paquetes")">Paquetes</a>
                <a href="@Url.Action("Index", "Personas")">Clientes</a>
                <a href="@Url.Action("Index", "Reservas")">Reservas</a>
                <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
            </div>
        }


        <section id="tabla" class="navbar navbar-light bg-light">
            <div id="crear" class="mb-3">
                <h1>Servicios</h1>
                @if (isAdmin)
                {
                    <a href="@Url.Action("Create", "Servicios")" class="btn btn-primary">Nuevo Servicio</a>
                }
            </div>
            <table id="example" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th title="Nombre Servicio">Nombre Servicio</th>
                        <th class="th" title="Descripción">Descripción</th>
                        <th class="th" title="Tipo Servicio">Tipo Servicio</th>
                        <th class="th" title="Precio">Precio</th>
                        @if (isAdmin)
                        {
                            <th title="Operaciones">Operaciones</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NomServicio</td>
                            <td class="td">@item.Descripcion</td>
                            <td class="td">@item.TipoServicio</td>
                            <td class="td">@item.Precio</td>
                            @if (isAdmin)
                            {
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.IdServicios })"
                                        class="btn btn-warning btn-sm">Editar</a>
                                </td>
                            }
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="@(isAdmin ? 6 : 5)" class="text-center">No hay servicios disponibles.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="/js/funcionClick.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>

</html>
